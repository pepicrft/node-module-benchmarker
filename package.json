{
  "name": "node-module-benchmarker",
  "version": "0.1.0",
  "description": "A Node module loader to benchmark the time it takes to load an ESM module graph",
  "keywords": [
    "benchmark",
    "esm"
  ],
  "files": [
    "dist/",
    "bin/",
    "src/cjs.mjs"
  ],
  "type": "module",
  "module": "dist/esm.js",
  "main": "src/cjs.cjs",
  "exports": {
    ".": {
      "import": "./dist/esm.js",
      "require": "./src/cjs.cjs"
    }
  },
  "scripts": {
    "prepack": "pnpm run build",
    "node-module-benchmarker": "pnpm build && BENCHMARK_OUTPUT_PATH=./output.json node bin/node-module-benchmarker.js",
    "build": "pnpm clean && tsc -p ./tsconfig.build.json",
    "clean": "rimraf dist",
    "test": "vitest --run",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint 'src/**/*.ts' --fix"
  },
  "author": "oss@craftweg.com",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "14.18.38",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nx": "15.8.6",
    "prettier": "^2.8.1",
    "rimraf": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.4",
    "vitest": "^0.29.0"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=14.17.0"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "execa": "^6.1.0",
    "find-up": "^6.3.0",
    "node-abort-controller": "^3.0.1"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  }
}
